<Page x:Class="ArcGISRuntime.Samples.Phone.Samples.SecuritySamples"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013">
	
	<Grid  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock TextWrapping="Wrap" Width="350" Margin="15" TextAlignment="Justify"
					   Text="The ArcGIS Runtime SDK for .NET Security samples are included as part of the GitHub download but are not included in this Sample Viewer. You can find them on disk under the ArcGISRuntimeSamplesPhone\Samples\Security folder once you have downloaded or forked the GitHub repo."
					   FontSize="26"/>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40,20,40,10">
				<HyperlinkButton NavigateUri="https://github.com/Esri/arcgis-runtime-samples-dotnet/tree/master/src/Phone/ArcGISRuntimeSamplesPhone/Samples/Security">
					<TextBlock Text="Download Samples" VerticalAlignment="Center"></TextBlock>
				</HyperlinkButton>
			</StackPanel>
		</StackPanel>
	</Grid>
</Page>
